@model ECommerce.Models.OrderViewModel

<h2>檢視訂單</h2>

<div class="form-group">
    <label>訂單編號</label>
    <input asp-for="OrderNo" class="form-control" readonly />
</div>

<div class="form-group">
    <label>狀態</label>
    <input type="text" class="form-control" value="@Model.StatusDescription" readonly />
</div>

<div class="form-group">
    <label asp-for="Customer">顧客姓名</label>
    <input asp-for="Customer" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Remark">備註</label>
    <textarea asp-for="Remark" class="form-control" readonly></textarea>
</div>

<div class="form-group">
    <label asp-for="ShipDate">出貨日期</label>
    <input asp-for="ShipDate" class="form-control" type="date" readonly />
</div>

<h4>訂單明細</h4>
<table class="table">
    <thead>
        <tr>
            <th>產品</th>
            <th>數量</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>
                    @detail.ProductName
                </td>
                <td>@detail.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Query" class="btn btn-secondary">返回</a>
</div>
