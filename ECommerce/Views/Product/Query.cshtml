<table class="table mt-4">
    <thead>
        <tr>
            <th>產品編號</th>
            <th>產品名稱</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning">編輯</a>
                </td>
            </tr>
        }
    </tbody>
</table>