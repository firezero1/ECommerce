@model IEnumerable<ECommerce.Models.Product>

<h2>產品查詢</h2>

<form method="get" asp-action="Query">
    <div class="form-group">
        <label for="searchTerm">產品名稱</label>
        <input type="text" id="productName" name="productName" class="form-control" value="@ViewBag.ProductName" placeholder="輸入產品名稱進行查詢" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">查詢</button>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>產品編號</th>
            <th>產品名稱</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning">編輯</a>
                </td>
            </tr>
        }
    </tbody>
</table>